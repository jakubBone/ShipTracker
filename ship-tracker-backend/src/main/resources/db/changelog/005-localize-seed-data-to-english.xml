    <!-- Switch application locale from Polish to English -->

    <changeSet id="005-localize-ship-types" author="shiptracker">
        <update tableName="ships">
            <column name="ship_type" value="Cargo Ship"/>
            <where>ship_type = 'Frachtowiec'</where>
        </update>
        <update tableName="ships">
            <column name="ship_type" value="Tanker"/>
            <where>ship_type = 'Tankowiec'</where>
